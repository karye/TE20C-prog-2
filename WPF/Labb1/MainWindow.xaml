<Window x:Class="Labb1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Labb1"
        mc:Ignorable="d"
        Title="Area kalkylator" Height="300" Width="250" Background="#EEE">
    <StackPanel Margin="5">
        <Label Margin="5">Ange höjd</Label>
        <TextBox Name="rutaHöjd" Margin="5"></TextBox>
        <Label Margin="5">Ange bredd</Label>
        <TextBox Name="rutaBredd" Margin="5"></TextBox>
        <Button Click="KlickRäknaUt" Margin="5">Räkna ut</Button>
        <Label Margin="5">Resultat</Label>
        <TextBox Name="rutaResultat" Margin="5" IsReadOnly="True"></TextBox>
    </StackPanel>
</Window>
