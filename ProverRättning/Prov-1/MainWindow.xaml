<Window x:Class="Prov_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Prov_1"
        mc:Ignorable="d"
        Title="Slumptal" 
        SizeToContent="WidthAndHeight"
        MinHeight="400" MinWidth="100" 
        MaxHeight="600" MaxWidth="500"
        Background="#EEE">
    <StackPanel Margin="10">
        <Label FontSize="20" Content="Gissa ett tal mellan 1 och 100"/>
        <Label Content="Du har 10 försök." />
        <Button Padding="5" Margin="5" Content="Starta" Name="knappStarta" Click="KlickStart" />
        <!-- Tänk på camelCase för variabelnamn -->
        <TextBox Padding="5" Margin="5" Name="rutaGissning" />
        <!-- Tänk på PascalCase för metodnamn -->
        <Button Padding="5" Margin="5" Content="Gissa" Name="knappGissa" Click="KlickGissa" />
        <Label FontSize="20" Margin="5" Content="Resultat" />
        <TextBox Padding="5" Margin="5" Name="rutaSvar" Height="200" VerticalScrollBarVisibility="Auto" />
    </StackPanel>
</Window>
